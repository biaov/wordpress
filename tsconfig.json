{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "useDefineForClassFields": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "./",

    /* 模块解析策略 */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* 校验 */
    "strict": true
  },
  "include": ["docs/.vitepress/**/*.ts", "docs/utils.ts"],
  "exclude": ["node_modules","cache"]
}
